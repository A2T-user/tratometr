<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".authorization.ui.fragment.PrivacyPolicyFragment">

    <LinearLayout
        android:id="@+id/topBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_64dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:src="@drawable/ic_arrows_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title"
            style="@style/AppTextH1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_16dp"
            android:text="@string/privacy_policy"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_24" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBlock">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/second_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/third_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourth_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fifth_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sixth_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sixth_text" /><!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seventh_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seventh_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eighth_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eighth_text" />

            <TextView
                style="@style/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ninth_header" />

            <TextView
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ninth_text" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>