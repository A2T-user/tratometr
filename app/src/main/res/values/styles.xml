<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:fontFamily">@font/manrope_weight400_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="header1">
        <item name="android:fontFamily">@font/manrope_weight700_bold</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
    </style>

    <style name="regular" parent="header1">
        <item name="fontFamily">@font/manrope_weight400_regular</item>
    </style>
</resources>