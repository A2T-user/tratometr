<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxBackgroundColor">?attr/appCardBackground</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_background_color</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:fontFamily">@font/manrope_weight400_regular</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">?attr/appTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="boxStrokeErrorColor">?attr/appErrorColor</item>
        <item name="errorTextColor">?attr/appErrorColor</item>
        <item name="cursorErrorColor">?attr/appErrorColor</item>
        <item name="errorIconDrawable">@null</item>
        <item name="cursorColor">?attr/appAccentColor</item>
    </style>

</resources>